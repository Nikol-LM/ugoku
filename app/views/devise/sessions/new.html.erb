<div class="login-container-header">
  <div class="login-section1">
    <div class="login-container-text">

      <div class="container-form">
        <div class="special-form">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs ">
              <h2 class="text-center mb-5">Log in</h2>
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email",
                          id: 'input_form',
                          class: 'mb-5' } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password",
                            id: 'input_form',
                            class: 'mb-5' } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="sign-in-btn-duo">
  <div class="btn-flat-signin-back">
    <%= link_to "Back", root_path, class:"btn btn-flat-sign-in-back" %>
  </div>
  <div class="btn-flat-signin-next">
    </div>
    <%= f.button :submit, "Validate", class:"btn btn-flat-sign-in-next" %>
  </div>
</div>
<% end %>
