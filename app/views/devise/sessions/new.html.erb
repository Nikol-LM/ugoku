<div class="container-form">
  <div class=" special-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs ">
          <h2 class="text-center mb-5">Log in</h2>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email",
                      id: 'input_form',
                      class: 'mb-5' } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password",
                        id: 'input_form',
                        class: 'mb-5' } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

  </div>
        <div class="form-actions d-flex justify-content-around btn-form fixed-bottom">
          <%= f.button :submit, "Validate", class: 'butn-valid mb-3' %>
          <%= link_to 'Back', root_path, class: 'butn-refuse text-center' %>
        </div>
      <% end %>
</div>
