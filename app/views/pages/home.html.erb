        <div class="carousel-item active">
          <div class="card-section">
            <%= image_tag "https://res.cloudinary.com/dueo7qd0s/image/upload/v1566312193/volodia.jpg", class: "avatar-bordered", alt: "avatar-bordered" %>
            <h2 class="user_name pb-3">Volodia</h2>
