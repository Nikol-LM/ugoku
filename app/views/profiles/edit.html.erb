<div class="profile">
  <h1 class='h1-profile'>Edit your profile</h1>
  <div class="card-profile">
    <div class="profile-part">
      <div class="profile-pict">
        <%= cl_image_tag current_user.photo , alt: "alttext", height: 170, width: 170, class: 'profile-picture ' %>
      </div>
      <div class="profile-pict pt-3">
        <%= link_to 'Modify your photo', '#'%>
      </div>
    </div>


    <div class="personnal-info-profile">
      <h2 class='text-center'>Your personnal info</h2>
      <%= simple_form_for @user, url: profile_path do |f| %>
        <div class="input-form-event">
          <%= f.input :name, label: 'Name' %>
          <%= f.input :email, label: 'Email' %>
          <%= f.input :address, label: 'Address' %>
          <div class="button-submit-profile">
            <%= link_to 'Back to my profile', '/users/show', class:"button-back-to-profile" %>
            <%= f.button :submit, value: 'Save modificaitons', class:" button-save-profile" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

