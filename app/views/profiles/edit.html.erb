<div class="profile">
  <div class="card-profile">
    <div class="profile-part">
      <div class="profile-pict">
        <%= user_image_tag(current_user, alt: "user avatar", height: 170, width: 170, class: 'profile-picture') %>
      </div>
      <div class="profile-pict">
        <%= simple_form_for @user, url: profile_path do |f| %>
          <%= f.input :photo, label: false %>
        <% end %>
      </div>
    </div>
    <div class="personnal-info-profile">
      <h2 class="title-info">Your personnal info</h2>
      <%= simple_form_for @user, url: profile_path do |f| %>
        <div class="input-form-event">
          <%= f.input :name, label: 'Name' %>
          <%= f.input :email, label: 'Email' %>
          <%= f.input :address, label: 'Address' %>
    </div>
  </div>
</div>
    <div class="button-submit-profile">
      <%= f.button :submit, value: 'Save modificaitons', class:" button-save-profile" %>
      <%= link_to 'Back to profile', '/users/show', class:"button-back-to-profile" %>
    </div>
  </div>
<% end %>

