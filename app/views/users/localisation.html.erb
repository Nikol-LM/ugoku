<div class="container-geolocalised">
  <div class="geolocalised">
    <h3 class="address-title">Address</h3>
  </div>
  <div class="geolocalised">
    <%= simple_form_for @user, url: users_localisation_update_path, html: { method: :patch } do |f| %>
      <%= f.input :address %>
            <%= link_to "", class: "geo-box" do %>
            <div class="icon-box"><i class="fas fa-location-arrow"></i></div>Or geolocate me!
            <% end %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.button :submit,"Validate", class: "btn btn-flat-geoloc-validate"  %>
        </div>
    <% end %>
